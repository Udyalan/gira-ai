# ===== CONFIGURAÇÃO EXISTENTE =====
# (Mantenha suas variáveis existentes aqui)

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here

# Database (atual)
DATABASE_URL="postgresql://user:password@localhost:5432/gira-ai"

# ===== NOVA CONFIGURAÇÃO - IA EVOLUTION =====

# IA Feature Flags (controla rollout gradual)
ENABLE_AI=false
USE_SUPABASE=false
WHATSAPP_BUSINESS=false
UPLOAD_ANALYSIS=false
SMART_BILLING=false
MARKETING_AI=false
FINANCIAL_AI=false
SCHEDULING_AI=false
MARKETPLACE=false
AFFILIATE_SYSTEM=false

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Supabase Configuration (paralelo ao Prisma)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Pinecone (Vector Database para memória IA)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=gira-ai-memory

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Email Service (para relatórios e notificações)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@gira.ai

# Storage (AWS S3 ou similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gira-ai-uploads

# Stripe (para marketplace e pagamentos)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoramento e Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# ===== CONFIGURAÇÕES OPCIONAIS =====

# Desenvolvimento e Debug
NODE_ENV=development
DEBUG_AI=false
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AI_REQUESTS_PER_HOUR=100

# Cache Configuration
REDIS_URL=redis://localhost:6379

# ===== INSTRUÇÕES DE CONFIGURAÇÃO =====

# 1. PARA COMEÇAR (mínimo necessário):
#    - Copie este arquivo para .env.local
#    - Configure ENABLE_AI=true
#    - Adicione sua OPENAI_API_KEY
#    - Execute: npm run dev

# 2. PARA FUNCIONALIDADE COMPLETA:
#    - Configure Supabase (USE_SUPABASE=true)
#    - Configure demais serviços conforme necessário
#    - Ative feature flags gradualmente

# 3. OBTER CHAVES DA API:
#    - OpenAI: https://platform.openai.com/api-keys
#    - Supabase: https://supabase.com/dashboard
#    - Pinecone: https://pinecone.io/
#    - WhatsApp: https://developers.facebook.com/docs/whatsapp
#    - Stripe: https://dashboard.stripe.com/apikeys

# 4. SEGURANÇA:
#    - NUNCA commite este arquivo com chaves reais
#    - Use .env.local para desenvolvimento
#    - Use variáveis de ambiente do hosting em produção